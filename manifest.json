{
    "manifest_version": 2,
    "name": "SOS-SOS",
    "version": "0.1",

    "background": {
        "page": "html/background.html"
    },

    "content_scripts": [{
        "matches": ["*://sos.devine-tools.be/student"],
        "js": ["js/listener-login.js"]
    }, {
        "matches": ["*://sos.devine-tools.be/student/registreer/consult/*", "http://sandbox.krivi.be/sos/"],
        "js": ["js/lib/jquery-3.2.1.min.js", "js/lib/masonry.pkgd.min.js", "js/listener-consult.js"]
    }],

    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "html/popup.html"
    },

    "options_ui": {
        "page": "html/options.html",
        "chrome_style": true
    },

    "permissions": [
        "storage",
        "cookies",
        "notifications",
        "*://sos.devine-tools.be/*"
    ]
}
